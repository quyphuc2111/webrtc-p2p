{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "bin/server",
          "cmd": "server",
          "sidecar": true
        },
        {
          "name": "get-ip",
          "cmd": "ipconfig",
          "args": ["getifaddr", "en0"]
        }
      ]
    }
  ]
}
